pipeline {
    agent any
    environment {
        name = Bassu
    }
    stages {
        stage('build1') {
            steps {
                echo "${name}"
            }
        }
        stage('build2') {
            steps {
                echo "Hello World"
            }
        }
    }
    post {
        always {
            echo "Always"
        }
        success {
            echo "Success"
        }
        failure {
            echo "Failure"
        }
    }
}
